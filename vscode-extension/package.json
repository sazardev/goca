{
    "name": "goca-extension",
    "displayName": "Goca - Go Clean Architecture Assistant",
    "description": "Asistente oficial para Goca - Generador de código para Go Clean Architecture",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Snippets",
        "Other",
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:go",
        "onCommand:goca.init",
        "onCommand:goca.feature",
        "onCommand:goca.entity",
        "onCommand:goca.usecase",
        "onCommand:goca.repository",
        "onCommand:goca.handler",
        "onCommand:goca.messages",
        "onCommand:goca.di",
        "onCommand:goca.interfaces",
        "onView:gocaExplorer"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "goca.version",
                "title": "Goca: Mostrar versión"
            },
            {
                "command": "goca.init",
                "title": "Goca: Inicializar proyecto"
            },
            {
                "command": "goca.feature",
                "title": "Goca: Generar feature completo"
            },
            {
                "command": "goca.entity",
                "title": "Goca: Generar entidad"
            },
            {
                "command": "goca.usecase",
                "title": "Goca: Generar caso de uso"
            },
            {
                "command": "goca.repository",
                "title": "Goca: Generar repositorio"
            },
            {
                "command": "goca.handler",
                "title": "Goca: Generar handler"
            },
            {
                "command": "goca.messages",
                "title": "Goca: Generar mensajes"
            },
            {
                "command": "goca.di",
                "title": "Goca: Generar inyección de dependencias"
            },
            {
                "command": "goca.interfaces",
                "title": "Goca: Generar interfaces"
            },
            {
                "command": "goca.refreshExplorer",
                "title": "Goca: Refrescar vista de explorador",
                "icon": "$(refresh)"
            },
            {
                "command": "goca.showDocumentation",
                "title": "Goca: Mostrar documentación",
                "icon": "$(book)"
            }
        ],
        "snippets": [
            {
                "language": "go",
                "path": "./snippets/go.json"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "goca-explorer",
                    "title": "Goca Explorer",
                    "icon": "resources/goca-icon.svg"
                }
            ]
        },
        "views": {
            "goca-explorer": [
                {
                    "id": "gocaExplorer",
                    "name": "Comandos",
                    "icon": "resources/goca-icon.svg",
                    "contextualTitle": "Goca Explorer"
                },
                {
                    "id": "gocaDocumentation",
                    "name": "Documentación",
                    "icon": "resources/docs-icon.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "goca.refreshExplorer",
                    "when": "view == gocaExplorer",
                    "group": "navigation"
                },
                {
                    "command": "goca.showDocumentation",
                    "when": "view == gocaDocumentation",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Goca",
            "properties": {
                "goca.path": {
                    "type": "string",
                    "default": "goca",
                    "description": "Ruta al ejecutable de Goca"
                },
                "goca.enableSnippets": {
                    "type": "boolean",
                    "default": true,
                    "description": "Habilitar snippets de Goca"
                },
                "goca.defaultProjectStructure": {
                    "type": "string",
                    "enum": [
                        "standard",
                        "ddd",
                        "hexagonal"
                    ],
                    "default": "standard",
                    "description": "Estructura de proyecto predeterminada"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "ts-loader": "^9.2.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    }
}